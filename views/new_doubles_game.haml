          %option{:value => player}=player
      %label{:for => "player4"}Player 4
      %select{:name => "player4", :id => "p4"}
        - @players.each do |player|
          %option{:value => player}=player
      %br
      %b Game 1:
      %label{:for => "served1"} Served:
      %select{:name => "served1", :id => "s1"}
      %label{:for => "winner1"} Winner:
      %select{:name => "winner1", :id => "w1"}
