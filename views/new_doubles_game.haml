#container.container_16
  %script{:type => 'text/javascript', :src => 'js/new_doubles_game.js'}
  %form{ :action => "/new_doubles_game", :method => "post"}
    %fieldset
      %b Team 1
      %label{:for => "player1"}Player 1
      %select{:name => "player1", :id => "p1"}
        - @players.each do |player|
          %option{:value => player}=player
      %label{:for => "player2"}Player 2
      %select{:name => "player2", :id => "p2"}
        - @players.each do |player|
          %option{:value => player}=player
      %br
      %b Team 2
      %label{:for => "player3"}Player 3
