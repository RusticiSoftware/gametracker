      %select{:name => "served3", :id => "s3"}
      %label{:for => "winner3"} Winner:
      %select{:name => "winner3", :id => "w3"}
      %label{:for => "score3"} Score:
      %input{:type => "text", :name => "score3", :id => "sc3", :class => "text"}
      %br
      %b Game 4 (if necessary):
      %label{:for => "served4"} Served:
      %select{:name => "served4", :id => "s4"}
      %label{:for => "winner4"} Winner:
